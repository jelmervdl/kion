{% extends 'admin/base.html.twig' %}

{% block body %}
<h2>Pages</h2>
<div class="table-responsive">
	<table class="table table-striped table-sm">
    	<thead>
    		<tr>
    			<th></th>
    			<th>Name</th>
    			<th>Public</th>
    		</tr>
    	</thead>
    	<tbody>
    		{% for page in pages %}
	    		<tr>
	    			<td><input type="checkbox"></td>
	    			<td><a href="{{ path('admin_page_show', {id: page.id}) }}">{{ page.name }}</a> (<a href="{{ path('page_show', {name: page.name}) }}">view</a>)</td>
	    			<td>{% if page.public %}Public{% else %}Private{% endif %}</td>
	    		</tr>
    		{% endfor %}
    	</tbody>
    </table>
</div>
{% endblock %}