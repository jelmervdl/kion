{% extends 'admin/base.html.twig' %}

{% block body %}
<a href="{{ path('page_new') }}" class="btn btn-secondary btn-sm float-right" tabindex="-1" role="button">New page</a>

<h2>Pages</h2>
<div class="table-responsive">
	<table class="table table-striped table-sm">
		<thead>
			<tr>
				<th></th>
				<th>Name</th>
				<th>Public</th>
			</tr>
		</thead>
		<tbody>
			{% for page in pages %}
				<tr>
					<td><input type="checkbox"></td>
					<td><a href="{{ path('page_edit', {slug: page.slug}) }}">{{ page.name }}</a> (<a href="{{ path('page_show', {slug: page.slug}) }}">/{{page.slug}}</a>)</td>
					<td>{% if page.public %}Public{% else %}Private{% endif %}</td>
				</tr>
			{% endfor %}
		</tbody>
	</table>
</div>
{% endblock %}